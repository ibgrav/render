{
  "name": "@ibgrav/render",
  "private": true,
  "scripts": {
    "dev": "concurrently npm:dev:vite npm:dev:server",
    "dev:server": "nodemon -r dotenv/config -e ts -w server -w components -w library server/index.ts",
    "dev:vite": "vite",
    "build:vite": "vite build",
    "build:server": "tsc",
    "build": "rimraf build dist && npm run build:vite && npm run build:server",
    "start": "node build/index.js"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "fastify": "^3.20.2",
    "fastify-static": "^4.2.3",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "^6.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "vite": "^2.5.1"
  }
}
